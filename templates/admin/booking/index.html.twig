{% extends 'admin/base.html.twig' %}

{% block title %}Administration des réservations{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="my-5">Administration des réservations</h1>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Date</th>
                    <th>Visiteur</th>
                    <th>Annonce</th>
                    <th>Durée</th>
                    <th>Montant</th>
                    <th class="text-center">Action</th>
                </tr>
            </thead>
            <tbody>
                {% for booking in bookings %}
                    <tr>
                        <td>{{booking.id}}</td>
                        <td>{{booking.createdAt | date("d/m/Y H:i")}}</td>
                        <td>{{booking.booker.fullName}}</td>
                        <td>{{booking.ad.title}}</td>
                        <td>{{booking.duration}}</td>
                        <td>{{booking.amount | number_format(2, ',', '.')}}€</td>
                        <td class="text-center">
                            <a href="{{path('admin_bookings_edit',{'id':booking.id})}}" class="btn btn-warning"><i class="fas fa-pen"></i></a>
                            <a href="#" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
